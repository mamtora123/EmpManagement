<!DOCTYPE html>
<html lang="en-gb">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Common CSS -->
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/css/Site.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet"
              integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
              crossorigin="anonymous"
              href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              asp-suppress-fallback-integrity="true" />

        <link rel="stylesheet"
              integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
              crossorigin="anonymous"
              href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
              asp-fallback-href="~/lib/font-awesome/css/font-awesome.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              asp-suppress-fallback-integrity="true" />

        <link href="~/css/Site.css" rel="stylesheet" />
    </environment>
</head>
<body>
    <header>
        <!-- Include Header Partial View -->
        @await Html.PartialAsync("_HeaderPartial")
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div class="container">
                <!-- Navigation bar or any other common UI elements -->
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("GetJson", "Home")">Get JSON</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("GetXmlSoap", "Home")">Get XML</a>
                    </li>
                </ul>
                <!-- Render the body content -->
                @RenderBody()
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <!-- Include Footer Partial View -->
        @await Html.PartialAsync("_FooterPartial")
    </footer>

    <!-- Common Scripts -->
    <environment include="Development">
        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.min.js"></script>
        <script src="~/js/Site.js" asp-append-version="true"></script>
    </environment>

    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
                integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
                crossorigin="anonymous"
                asp-fallback-src="~/lib/jquery/jquery.min.js"
                asp-suppress-fallback-integrity="true">
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
                integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s"
                crossorigin="anonymous"
                asp-fallback-src="~/lib/bootstrap/js/bootstrap.min.js"
                asp-suppress-fallback-integrity="true">
        </script>

        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
                integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
                crossorigin="anonymous"
                asp-fallback-src="~/lib/popper.js/umd/popper.min.js"
                asp-suppress-fallback-integrity="true">
        </script>
    </environment>

    <!-- Scripts specific to the end of the body -->
    @RenderSection("Scripts", required: false)
</body>
</html>
